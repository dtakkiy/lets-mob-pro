{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:jest/recommended", "plugin:jest/style"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jest"],
  "rules": {
    "no-console": "off",
    "jest/consistent-test-it": ["error", { "fn": "it" }],
    "jest/require-top-level-describe": ["error"]
  }
}
